# Flask & SQLAlchemy settings
SQLALCHEMY_DATABASE_URI=postgresql+psycopg2://username:password@localhost:5432/db_name
# Disable modification tracking (recommended for performance)
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Cloudinary settings (for avatar/image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Debug mode
DEBUG=True

# JWT settings
# Secret key used to sign JWT tokens
JWT_SECRET_KEY=your_jwt_secret_here
# Access token expiration time (in seconds)
JWT_ACCESS_TOKEN_EXPIRES=900
# Refresh token expiration time (in seconds)
JWT_REFRESH_TOKEN_EXPIRES=3600
# Issuer for encoding JWT
JWT_ENCODE_ISSUER=your_encode_issuer
# Issuer for decoding JWT
JWT_DECODE_ISSUER=your_decode_issuer
# Audience for decoding JWT (frontend application)
JWT_DECODE_AUDIENCE=your_audience

# CORS / Allowed origin
ALLOWED_ORIGIN=http://localhost:8080

# Redis settings (for rate limiting / caching)
REDIS_URL=redis://localhost:6379